<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    tools:context="com.example.ending.uisimple.MainActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_gravity="left"
    android:background="@drawable/common_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_bar"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:background="#03A9F4"
            android:visibility="gone">
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="#FFF4F4F4">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_shadow">
                <Button
                    android:id="@+id/MenuButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/ic_usermenu"
                    android:onClick="onClick"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/CreatClass1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/CreatClass2"
                        android:layout_marginTop="100dp"
                        android:layout_centerHorizontal="true"
                        android:onClick="onClick"
                        android:background="@drawable/createclass_button_selector"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:text="创建场景" />
                    <Button
                        android:id="@+id/CreatClass2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:onClick="onClick"
                        android:background="@mipmap/creator"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/JoinClass1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/JoinClass2"
                        android:layout_marginTop="110dp"
                        android:onClick="onClick"
                        android:background="@drawable/joinclass_button_selector"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        android:text="加入场景"
                        android:layout_centerHorizontal="true" />
                    <Button
                        android:id="@+id/JoinClass2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:onClick="onClick"
                        android:background="@mipmap/participant" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/Menu"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="220dp"
            android:background="@mipmap/star">

            <TextView
                android:id="@+id/numinfact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_centerHorizontal="true"
                android:textSize="14dp"
                android:text="立即登陆"
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/nameinfact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="110dp"
                android:textSize="14dp"
                android:text="与老师分享喜悦，获得更佳的使用体验体验"
                android:textColor="#ffffff"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Head"
                android:layout_alignBottom="@+id/LoginButton"
                android:layout_marginBottom="70dp"
                android:layout_centerHorizontal="true"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:visibility="invisible"
                android:src="@mipmap/elf"
                app:border_color="#03A9F4"
                app:border_width="2dp"/>
            <TextView
                android:id="@+id/userNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/LoginButton"
                android:layout_width="198dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="160dp"
                android:layout_marginLeft="61dp"
                android:onClick="onClick"
                android:textSize="16dp"
                android:text="@string/Login"
                android:textColor="#FFFFFF"
                android:background="@drawable/choose_login"/>
            <Button
                android:id="@+id/RegisterButton"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="187dp"
                android:onClick="onClick"
                android:textSize="14dp"
                android:text="@string/register"
                android:textColor="#FFFFFF"
                android:background="@android:color/transparent"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="187dp"
                android:textSize="14dp"
                android:text=""
                android:textColor="#ffffff"/>
            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="176dp"
                android:textSize="12dp"
                android:text=""
                android:textColor="#ffffff"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/checkhistory"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:text="登陆查看历史记录"
                android:paddingLeft="10dp"
                android:background="@drawable/easy_shadow"/>
        </RelativeLayout>
        <ListView
            android:id="@+id/lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:visibility="invisible">
        </ListView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
